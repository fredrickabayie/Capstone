<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88sp"
    android:layout_marginBottom="20sp"
    android:layout_marginTop="30sp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3sp"
        android:layout_marginStart="3sp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/logo_description" />

    <TextView
        android:id="@+id/list_meal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_marginLeft="10sp"
        android:layout_marginStart="10sp"
        android:layout_toEndOf="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:paddingBottom="2dip"
        android:text="meal name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/list_meal_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_meal_name"
        android:layout_marginLeft="10sp"
        android:layout_marginStart="10sp"
        android:layout_toEndOf="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:paddingBottom="2dip"
        android:paddingTop="6dip"
        android:text="meal price"
        android:textColor="#e89e35"
        android:textSize="14sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/list_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_meal_name"
        android:layout_marginLeft="30sp"
        android:layout_marginStart="30sp"
        android:layout_toEndOf="@+id/list_meal_price"
        android:layout_toRightOf="@+id/thumbnail"
        android:paddingBottom="2dip"
        android:paddingTop="6dip"
        android:text="order status"
        android:textColor="#538000"
        android:textSize="14sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/list_order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/list_meal_name"
        android:layout_marginEnd="5sp"
        android:layout_marginRight="5dip"
        android:gravity="end"
        android:paddingBottom="2dip"
        android:text="order date"
        android:textColor="#000"
        android:textSize="13sp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/list_order_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/list_order_date"
        android:layout_marginEnd="5sp"
        android:layout_marginRight="5dip"
        android:gravity="end"
        android:paddingTop="6dip"
        android:text="order time"
        android:textColor="#000"
        android:textSize="13sp"
        android:typeface="sans" />

</RelativeLayout>
